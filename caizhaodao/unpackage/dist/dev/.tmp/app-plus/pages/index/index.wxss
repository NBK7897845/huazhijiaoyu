          flex-wrap: wrap;
}
.container .c-item .class {
  margin-bottom: 30rpx;
  width: 48%;
  box-shadow: 0px 10rpx 12rpx 0px rgba(0, 0, 0, 0.11);
}
.container .c-item .class image {
  width: 100%;
  height: 175rpx;
}
.container .c-item .class .c-name {
  font-size: 26rpx;
  line-height: 40rpx;
  height: 80rpx;
  padding: 0 10rpx;
