  width: 121rpx;
  font-size: 25rpx;
  text-align: center;
  color: #727272;
}
.tab .t-item image {
  width: 100%;
}
.container {
  padding: 30rpx 30rpx 30rpx 30rpx;
  margin: 30rpx 0 0 0;
  background: #fff;
}
.container .c-top {
  position: relative;
  font-size: 30rpx;
  margin-bottom: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  line-height: 2;
}
.container .c-top .c-img {
  width: 50rpx;
  height: 50rpx;
}
.container .c-top .c-left {
  color: #1d1d1d;
  margin-left: 10rpx;
}
.container .c-top .c-right {
