  height: 60rpx;
  width: 87%;
  font-size: 26rpx;
  border-radius: 30rpx;
  background: #EFEFEF;
}
.lunbo {
  width: 100%;
  height: 320rpx;
  margin-top: 12rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.lunbo image {
  width: 100%;
  height: 320rpx;
}
.tab {
