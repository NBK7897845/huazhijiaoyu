  float: left;
}
.pl-info {
  margin-left: 90rpx;
  font-size: 30rpx;
}
.pl-info .pl-name {
  color: #181818;
}
.pl-info .pl-day {
  color: #A2A2A2;
  font-size: 25rpx;
}
.p-punlun {
  font-size: 25rpx;
