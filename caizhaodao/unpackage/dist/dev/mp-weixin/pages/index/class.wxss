}
.tab {
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
}
.t-name {
  float: left;
  width: 33%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: center;
}
