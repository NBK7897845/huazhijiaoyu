.header {
  position: relative;
  background: #fff;
}
.header > image {
  height: 300rpx;
  width: 1000rpx;
  margin-left: -130rpx;
}
.h-info {
  top: 100rpx;
  width: 690rpx;
  left: 30rpx;
  position: absolute;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 9rpx 32rpx 0 rgba(35, 31, 32, 0.19);
}
.h-info > image {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top: -60rpx;
  left: 50%;
